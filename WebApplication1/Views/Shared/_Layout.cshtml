    <script>
        // Kiểm tra xem CartID có tồn tại trong localStorage không
        let cartId = localStorage.getItem('CartID');

        if (cartId === null) {
            // Nếu không tồn tại, tạo một GUID mới
            cartId = generateUUID();

            // Lưu CartID mới vào localStorage
            localStorage.setItem('CartID', cartId);

            console.log('New CartID generated and saved:', cartId);
        } else {
            console.log('CartID exists:', cartId);
        }

        // Hàm tạo GUID
        function generateUUID() {
            return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function (c) {
                var r = Math.random() * 16 | 0, v = c === 'x' ? r : (r & 0x3 | 0x8);
                return v.toString(16);
            });
        }
    </script>

